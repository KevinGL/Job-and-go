{% extends "base.html.twig" %}

{% block title %}Détail du contact{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Détail du contact</h1>

    <table class="table table-hover mb-5">
        <tbody>
            <tr><th scope="col">Nom</th> <td>{{ contact.name }}</td></tr>
            <tr><th scope="col">Société</th> <td>{{ contact.society is not null ? contact.society : "N/A" }}</td></tr>
            <tr><th scope="col">Adresse email</th> <td>{{ contact.email is not null ? contact.email : "N/A" }}</td></tr>
            <tr><th scope="col">Numéro de tél</th> <td>{{ contact.telNumber is not null ? contact.telNumber : "N/A" }}</td></tr>
            <tr><th scope="col">Contacté ?</th> <td>{{ contact.contacted ? "Oui" : "Non" }}</td></tr>
        </tbody>
    </table>

    <div class="d-flex flex-inline">
        <a type="button" class="btn btn-success mx-2" href="{{ path('app_contacts') }}">Listes de vos contacts</a>
        <a type="button" class="btn btn-warning mx-2" href="{{ path('edit_contact', {'id': contact.id}) }}">Modifier ce contact</a>

        <form action="{{ path('delete_contact', {id: contact.id}) }}" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger mx-2">Supprimer ce contact</button>
        </form>
    </div>

</div>

{% endblock %}