{% extends 'base.html.twig' %}

{% block title %}Liste de vos appels sans suite{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Liste de vos appels sans suite</h1>

    <br>

    <a type="button" class="btn btn-info" href="{{ path('add_call') }}">Ajouter un appel</a>
    <div type="button" class="btn btn-danger" id="deleteSelected">Supprimer</div>
    <br>
    <br>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="month" id="month" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary" id="validMonth">Valider</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col"><input type="checkbox" id="select_all" /></th>
                <th scope="col">Nom de la société</th>
                <th scope="col">Numéro de téléphone</th>
                <th scope="col">Contrat recherché</th>
                <th scope="col">Date de l'appel</th>
                <th scope="col">Poste recherché</th>
            </tr>
        </thead>
        <tbody>
            {% for call in calls %}
                <tr>
                    <td id="{{ call.id }}" /></td>
                    <th scope="row">{{ call.society }}</th>
                    <td>{{ call.telNumber }}</td>
                    <td>{{ call.contractSearched }}</td>
                    <td>{{ call.date | date("d-m-Y") }}</td>
                    <td>{{ call.job }}</td>
                    <td><a type="button" class="btn btn-info" href={{ path('view_call', {'id': call.id}) }}>Détail de l'appel</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
